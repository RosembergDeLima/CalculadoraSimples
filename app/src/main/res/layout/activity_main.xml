<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rosemberg.calculadorasimples.MainActivity"
    android:padding="0dp"
    android:background="#14e41f"
    android:onClick="onClickNumber">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tela"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_margin="0dp"
        android:textSize="70dp"
        android:gravity="bottom|right" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="1"
        android:id="@+id/btn1"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/tela"
        android:layout_alignStart="@+id/tela"
        android:nestedScrollingEnabled="false"/>

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="2"
        android:id="@+id/btn2"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="3"
        android:id="@+id/btn3"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="+"
        android:id="@+id/btnSum"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="4"
        android:id="@+id/btn4"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn7" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="5"
        android:id="@+id/btn5"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn2"
        android:layout_toStartOf="@+id/btn6" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="6"
        android:id="@+id/btn6"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn3"
        android:layout_alignStart="@+id/btn9" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="-"
        android:id="@+id/btnSub"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn3"
        android:layout_alignStart="@+id/btnMult" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="7"
        android:id="@+id/btn7"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn5" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="8"
        android:id="@+id/btn8"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn5"
        android:layout_toStartOf="@+id/btn6" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="9"
        android:id="@+id/btn9"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toStartOf="@+id/btnSub" />

    <Button
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:text="x"
        android:id="@+id/btnMult"
        android:background="#222222"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnSub"
        android:layout_alignEnd="@+id/tela" />

    <Button
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:text="C"
        android:id="@+id/btnC"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:text="0"
        android:id="@+id/btn0"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnC" />

    <Button
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnDiv"
        android:layout_toStartOf="@+id/btnDiv" />

    <Button
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:background="#222222"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tela" />

</RelativeLayout>
